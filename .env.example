# ===========================================
# AMPMKP Environment Configuration
# ===========================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!
# ===========================================

# Dashboard Authentication
JOURNAL_DASHBOARD_PASSWORD=your_dashboard_password_here

# ===========================================
# Stripe Configuration
# ===========================================
# Environment: 'test' or 'live'
STRIPE_ENVIRONMENT=test

# Test Keys (for development)
STRIPE_TEST_SECRET_KEY=sk_test_your_test_secret_key_here
STRIPE_TEST_PUBLISHABLE_KEY=pk_test_your_test_publishable_key_here

# Live Keys (for production - set these when going live)
STRIPE_LIVE_SECRET_KEY=sk_live_your_live_secret_key_here
STRIPE_LIVE_PUBLISHABLE_KEY=pk_live_your_live_publishable_key_here

# ===========================================
# Discord Bot Configuration
# ===========================================
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_CHANNEL_ID=your_discord_channel_id_here

# ===========================================
# Server Configuration
# ===========================================
PORT=3000

# ===========================================
# Meta (Facebook/Instagram) Configuration
# ===========================================
# Facebook Pixel ID for tracking
FACEBOOK_PIXEL_ID=your_facebook_pixel_id_here

# Meta App ID and Secret for Commerce Manager
FACEBOOK_APP_ID=your_facebook_app_id_here
FACEBOOK_APP_SECRET=your_facebook_app_secret_here
FACEBOOK_ACCESS_TOKEN=your_facebook_access_token_here

# Facebook Page ID for Instagram Shopping
FACEBOOK_PAGE_ID=your_facebook_page_id_here
INSTAGRAM_BUSINESS_ACCOUNT_ID=your_instagram_business_account_id_here

# Product Feed Settings (for Meta Commerce / Instagram Shop)
# Full site URL for feed link/image_link - required for catalog (use HTTPS on live)
SITE_BASE_URL=https://angelmarketplace.org
FACEBOOK_FEED_CURRENCY=GBP
FACEBOOK_FEED_LANGUAGE=en
