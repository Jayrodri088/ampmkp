<script>
function addToCart(productId) {
    const quantity = document.getElementById('quantity').value;
    
    // Use the global cart function from cart.js
    if (window.addToCart) {
        // Find the button that triggered this
        const button = document.querySelector(`button[onclick*="addToCart(${productId})"]`);
        window.addToCart(productId, parseInt(quantity), button);
    }
}

function buyNow(productId) {
    const quantity = document.getElementById('quantity').value;
    
    // Add to cart first, then redirect
    if (window.addToCart) {
        window.addToCart(productId, parseInt(quantity));
        
        // Redirect to cart after cart is updated
        setTimeout(() => {
            window.location.href = '/ampmkp/cart.php';
        }, 1500);
    }
}
</script>

